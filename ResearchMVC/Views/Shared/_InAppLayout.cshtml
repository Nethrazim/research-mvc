<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/three-dots.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="container-fluid app-navbar">
        <div class="row">
            <div class="col-md-12">
                <div style="height: 45px;background-color:rgb(2,100,191);padding-top:5px;">
                    <h4>Training</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1" style="padding-left:0px;">
                <div class="app-main-menu">
                    <ul>
                        <li id="menu-item-persons">
                            <div class="submenu-top-item">
                                <i class="bi bi-file-earmark-person"></i>
                                <a href="#">Persons</a>
                            </div>
                            <div class="app-submenu-items">
                                <div class="submenu-item">
                                    <a href="/Person/Index">Search</a>
                                </div>
                                <div class="submenu-item">
                                    <a href="/Person/CreatePerson">Create Person</a>
                                </div>
                                <div class="submenu-item">
                                    <a href="/StateProvince/CreateStateProvince">Create Province</a>
                                </div>
                            </div>
                        </li>
                        <li id="menu-item-hr">
                            <div class="submenu-top-item">
                                <i class="bi bi-bar-chart-line"></i>
                                <a href="#">HR</a>
                            </div>
                            <div class="app-submenu-items">
                                <div class="submenu-item">
                                    <a href="/HumanResources/Index">Search</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-11">
                <div class="container-fluid body-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <div class="app-footer">
        <footer>
            <div class="d-flex justify-content-center">
                <p>&copy; @DateTime.Now.Year - MVC - Research Application</p>
            </div>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    function toggleMenu($this) {
        var menuBox = $($this).parent().next(".app-submenu-items")[0];
        if (menuBox) {
            if (menuBox.style.display == "block") {
                menuBox.style.display = "none";
            }
            else {
                menuBox.style.display = "block";
            }
        }
    }

    $(".submenu-top-item a").on('click', function (event) {
        event.stopPropagation();
        event.stopImmediatePropagation();
        toggleMenu(event.currentTarget);
    });
</script>
